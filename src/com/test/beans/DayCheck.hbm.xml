<?xml version="1.0" encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.test.beans">
	<class name="DayCheck" table="daycheck">
		<id name="dc_id" column="dc_id">
			<generator class="native"></generator>
		</id>
		<property name="per_no" column="per_no" type="java.lang.String"
			not-null="true" length="20"></property>
		<property name="per_name" column="per_name" type="java.lang.String"
			not-null="true" length="50" />
		<property name="dc_date" column="dc_date" type="java.util.Date" />
	</class>
</hibernate-mapping>  