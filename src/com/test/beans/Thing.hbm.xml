<?xml version="1.0" encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.test.beans">
	<class name="Thing" table="thing">
		<id name="th_id" column="th_id">
			<generator class="native"></generator>
		</id>

		<property name="th_name" column="th_name" type="java.lang.String"
			not-null="true" length="50" />
		<property name="per_id" column="per_id" type="java.lang.Long"
			not-null="true" length="20" />
		<property name="per_no" column="per_no" type="java.lang.String"
			not-null="true" length="20"></property>
		<property name="per_name" column="per_name" type="java.lang.String"
			not-null="true" length="50" />
		<property name="th_reason" column="th_reason" type="java.lang.String"
			not-null="true" length="255" />
		<property name="per_ADid" column="per_ADid" type="java.lang.Long"
			not-null="true" length="20" />
		<property name="per_ADno" column="per_ADno" type="java.lang.String"
			not-null="true" length="20"></property>
		<property name="per_ADname" column="per_ADname" type="java.lang.String"
			not-null="true" length="50" />
		<property name="th_result" column="th_result" type="java.lang.String"
			not-null="true" length="20" />
		<property name="th_date" column="th_date" type="java.util.Date" />
		<property name="th_long" column="th_long" type="java.lang.String"
			not-null="true" length="20" />

	</class>
</hibernate-mapping>  